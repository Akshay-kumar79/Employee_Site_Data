<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".screens.MainFragment">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:src="@drawable/background"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/employee_location_activity_button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:text="@string/employee_location_activity"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/employee_productivity_button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:text="@string/add_employee_productivity"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/employee_report"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:text="@string/employee_report"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/location_report"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:text="@string/location_report"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/activity_report"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:text="@string/activity_report"
                android:textAllCaps="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="24dp"
                android:text="\@ This app is done by warefah 2022"/>

        </LinearLayout>

    </ScrollView>
</layout>